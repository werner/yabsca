%html
  %head
    = stylesheet_link_tag "../javascripts/ext/resources/css/ext-all"
    = javascript_include_tag "json2"
    = javascript_include_tag "ext/adapter/ext/ext-base"
    = javascript_include_tag "ext/ext-all"
    = stylesheet_link_tag "default","scaffold"
